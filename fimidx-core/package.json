{
  "name": "fimidx-core",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "env-cmd -f \".env.test\" vitest run --config ./vitest.config.ts",
    "test:unit": "env-cmd -f \".env.test\" vitest run --config ./vitest.config.unit.ts",
    "clean": "rm -rf dist",
    "compile:dev": "tsc --watch",
    "compile": "pnpm clean && tsc",
    "type-check": "tsc --noEmit",
    "db:generate:sqlite": "env-cmd -f \".env.local\" npx drizzle-kit generate --config=fimidx.sqlite.drizzle.config.ts",
    "db:generate:postgres": "env-cmd -f \".env.local\" npx drizzle-kit generate --config=fimidx.postgres.drizzle.config.ts",
    "db:migrate:sqlite:dev": "env-cmd -f \".env.local\" npx drizzle-kit migrate --config=fimidx.sqlite.drizzle.config.ts",
    "db:migrate:sqlite:prod": "env-cmd -f \".env.prod\" npx drizzle-kit migrate --config=fimidx.sqlite.drizzle.config.ts",
    "db:migrate:sqlite:test": "env-cmd -f \".env.test\" npx drizzle-kit migrate --config=fimidx.sqlite.drizzle.config.ts",
    "db:migrate:postgres:dev": "env-cmd -f \".env.local\" npx drizzle-kit migrate --config=fimidx.postgres.drizzle.config.ts",
    "db:migrate:postgres:prod": "env-cmd -f \".env.prod\" npx drizzle-kit migrate --config=fimidx.postgres.drizzle.config.ts",
    "db:migrate:postgres:test": "env-cmd -f \".env.test\" npx drizzle-kit migrate --config=fimidx.postgres.drizzle.config.ts",
    "mongo:dev": "npx run-rs --host localhost --portStart 27010 --dbpath ./local-mongo/dev --keep -v 7.0.0",
    "mongo:test": "npx run-rs --host localhost --portStart 27015 --dbpath ./local-mongo/test"
  },
  "type": "module",
  "exports": {
    "./db/*": {
      "types": "./dist/db/*.d.ts",
      "import": "./dist/db/*.js",
      "default": "./dist/db/*.js"
    },
    "./definitions/*": {
      "types": "./dist/definitions/*.d.ts",
      "import": "./dist/definitions/*.js",
      "default": "./dist/definitions/*.js"
    },
    "./serverHelpers/*": {
      "types": "./dist/serverHelpers/*.d.ts",
      "import": "./dist/serverHelpers/*.js",
      "default": "./dist/serverHelpers/*.js"
    },
    "./common/*": {
      "types": "./dist/common/*.d.ts",
      "import": "./dist/common/*.js",
      "default": "./dist/common/*.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.8.0",
    "@libsql/client": "^0.14.0",
    "@types/split2": "^4.2.3",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.40.1",
    "fimidara": "^1.39.0",
    "fimidx": "^0.5.0",
    "fimidx-winston-transport": "^0.3.2",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "lodash-es": "^4.17.21",
    "lru-cache": "^11.1.0",
    "mongoose": "^8.15.1",
    "next-auth": "5.0.0-beta.25",
    "next-themes": "^0.4.4",
    "pg": "^8.16.3",
    "redlock-universal": "^0.7.6",
    "softkave-js-utils": "0.17.1",
    "split2": "^4.2.0",
    "type-fest": "^4.37.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.7.5",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.30.6",
    "env-cmd": "^10.1.0",
    "eslint": "^9",
    "typescript": "^5",
    "vitest": "^3.1.3"
  }
}
